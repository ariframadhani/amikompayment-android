<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fsd.amikompayment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme" />
        <activity android:name=".Homepage" />
        <activity android:name=".History" />
        <activity android:name=".Help" />
        <activity android:name=".Profile" />
        <activity
            android:name=".Pembayaran"
            android:parentActivityName=".Dashboard"
            android:theme="@style/onToolbar" />
        <activity
            android:name=".Deposit"
            android:parentActivityName=".Dashboard"
            android:theme="@style/onToolbar" />
        <activity
            android:name=".PembayaranUKM"
            android:parentActivityName=".Pembayaran"
            android:theme="@style/onToolbar" />
        <activity android:name=".Notification"></activity>
    </application>

</manifest>