<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bgDashboard"
    tools:context="com.example.fsd.amikompayment.Dashboard">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amikom Payment akan mempermudah \nanda dalam pemayaran"
        android:textColor="@color/textDashboard"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerText"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/layout_btn1_homepage"
            android:background="@drawable/bg_circle"
            android:layout_marginBottom="15dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/homepage_logo_1"
                android:background="@drawable/btn_ripple_circle"
                android:padding="20dp"
                android:id="@+id/btnMenuPembayaran" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_btn1_homepage"
            android:layout_alignStart="@id/layout_btn1_homepage"
            android:layout_alignEnd="@id/layout_btn1_homepage"
            android:text="Pembayaran"
            android:textColor="@color/textDashboard"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle"
            android:layout_marginStart="30dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/layout_btn2_homepage">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/homepage_logo_2"
                android:background="@drawable/btn_ripple_circle"
                android:padding="20dp"
                android:id="@+id/btnMenuDeposit" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_btn2_homepage"
            android:layout_alignStart="@id/layout_btn2_homepage"
            android:layout_alignEnd="@id/layout_btn2_homepage"
            android:text="Top-Up"
            android:textColor="@color/textDashboard"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textAlignment="center"/>


    </RelativeLayout>


</RelativeLayout>
